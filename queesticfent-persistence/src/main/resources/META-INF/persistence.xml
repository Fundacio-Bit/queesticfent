<?xml version="1.0" encoding="UTF-8" ?>

<!-- FITXER AUTOGENERAT -->
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
             version="2.2">
    <persistence-unit name="queesticfentPU" transaction-type="JTA">
        <provider>org.fundaciobit.queesticfent.hibernate.CustomHibernatePersistenceProvider</provider>
        <jta-data-source>java:jboss/datasources/queesticfentDS</jta-data-source>
        
		<class>org.fundaciobit.queesticfent.persistence.AccionsJPA</class>
		<class>org.fundaciobit.queesticfent.persistence.DepartamentsJPA</class>
		<class>org.fundaciobit.queesticfent.persistence.FestiusJPA</class>
		<class>org.fundaciobit.queesticfent.persistence.FitxerJPA</class>
		<class>org.fundaciobit.queesticfent.persistence.GrupsJPA</class>
		<class>org.fundaciobit.queesticfent.persistence.GrupsusuariJPA</class>
		<class>org.fundaciobit.queesticfent.persistence.IdiomaJPA</class>
		<class>org.fundaciobit.queesticfent.persistence.ModificacionsQueEsticFentJPA</class>
		<class>org.fundaciobit.queesticfent.persistence.PersonalProjecteJPA</class>
		<class>org.fundaciobit.queesticfent.persistence.ProjectesJPA</class>
		<class>org.fundaciobit.queesticfent.persistence.TraduccioJPA</class>
		<class>org.fundaciobit.queesticfent.persistence.TraduccioMapJPA</class>
		<class>org.fundaciobit.queesticfent.persistence.TwitterJPA</class>
		<class>org.fundaciobit.queesticfent.persistence.UsuarisJPA</class>
		<class>org.fundaciobit.queesticfent.persistence.UsuarisDepartamentJPA</class>

        <!-- Activar cache només per aquelles entitats on volguem expressament -->
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
        <!-- Sempre activar la validació de les propietats -->
        <validation-mode>CALLBACK</validation-mode>

    </persistence-unit>
</persistence>